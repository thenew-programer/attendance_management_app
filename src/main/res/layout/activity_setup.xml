<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Teacher's name input -->
    <TextView
        android:id="@+id/teacherNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom et Prenom"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/teacherNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teacherNameLabel"
        android:layout_marginTop="8dp"
        android:hint="Enter your name"/>

    <!-- Subject selection -->
    <TextView
        android:id="@+id/subjectLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Module"
        android:layout_below="@id/teacherNameEditText"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/subjectSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subjectLabel"
        android:layout_marginTop="8dp"/>

    <!-- Save button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@id/subjectSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"/>

</RelativeLayout>
